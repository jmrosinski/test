include ../makefile.defs
FLDFLAGS = -Mcuda=cc61 -lstdc++
OBJS     = basic.o
EXE      = $(basename $(OBJS))

$(EXE): $(OBJS)
	$(FC) -o $@ $(FACCFLAGS) $(FLDFLAGS) $(OBJS) -L../src -l$(LIBNAME) -L../cuda/src -l$(LIBNAME_CUDA)

%.o: %.F90
	$(FC) -c -o $@ -I../src -I../cuda/src $(FACCFLAGS) $<

clean:
	$(RM) $(OBJS) $(EXE)
